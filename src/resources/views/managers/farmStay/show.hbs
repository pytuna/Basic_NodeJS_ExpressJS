<div class='mt-4'>
    <h3>Danh sách FarmStay</h3>
    <a
        href='/manager/create/farmstay'
        type='button'
        class='btn btn-success mt-2'
    >Thêm FarmStay</a>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên</th>
                <th scope='col'>Địa điểm</th>
                <th scope='col'>Thời gian tạo</th>
                <th scope='col' colspan='2'>Thời gian cập nhật</th>

            </tr>
        </thead>
        <tbody>
            {{#each farmStays}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.location}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>{{this.updatedAt}}</td>
                    <td>
                        <a
                            href='/manager/farmstay/{{this._id}}/edit'
                            class='btn btn-link'
                        >Sửa</a>
                        <a
                            id='btn-show-modal-delete'
                            href=''
                            class='btn btn-link'
                            data-toggle='modal'
                            data-target='#delete-farmstay-modal'
                            data-id='{{this._id}}'
                            data-namefarmstay='{{this.name}}'
                        >Xóa</a>
                    </td>
                </tr>
            {{/each}}

        </tbody>
    </table>
</div>

<!-- Modal -->
<div
    class='modal fade'
    id='delete-farmstay-modal'
    tabindex='-1'
    role='dialog'
    aria-labelledby='exampleModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title' id='exampleModalLabel'>Xóa FarmStay</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body' id='modal-info-delete-farmstay'>

            </div>
            <div class='modal-footer'>
                <button
                    id='btn-delete-farmstay'
                    type='button'
                    class='btn btn-danger'
                >Xóa bỏ</button>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Hủy</button>
            </div>
        </div>
    </div>
</div>

{{! DELETE hiden course }}
<form name='delete-farmstay-form' method='POST'></form>

<script>

    document.addEventListener("DOMContentLoaded", function(){ 
        var courseID; 
        var nameFarmStay; 
        var btnDeleteFarmStay = document.getElementById("btn-delete-farmstay"); 
        var btnShowDeleteFarmStay = document.getElementById("btn-show-modal-delete"); 
        var deleteForm = document.forms['delete-farmstay-form'];

        btnShowDeleteFarmStay.onclick = function(){
            var nameFarmStay;
            $('#delete-farmstay-modal').on('show.bs.modal', 
                function (event) { 
                    var button = $(event.relatedTarget) // Button that triggered the modal 
                    var id = button.data('id') // lấy dữ liệu từ data-id của nút xóa 
                    nameFarmStay = button.data("namefarmstay") 
                    var modalInfo = document.getElementById("modal-info-delete-farmstay"); 
                    modalInfo.innerHTML = "Bạn có muốn xóa <b>"+nameFarmStay+"</b>?";
                    courseID = id; 
                }
            ) 
        }
        btnDeleteFarmStay.onclick = function(){ //alert(courseID) 
            deleteForm.action = "/manager/farmstay/"+courseID+"/delete?_method=DELETE" // thêm dấu gạch là từ server còn kh thêm là add vào link hiện tại 
            deleteForm.submit(); 
        } 
    })

</script>